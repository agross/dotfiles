#!/usr/bin/env bash

set -euo pipefail

script="${0##*/}"
script_path="${0%/*}"

source_path="$HOME/Music/Music/"
target_path="/storage/3B3E-E2EC/Music"
target_host=root@poco-x3-alex

# Set directory dates, rsync will sync those dates as well as file dates.
dir-date-from-files "$source_path"

rsync --progress \
      --verbose \
      --human-readable \
      --modify-window=1 \
      --archive \
      --partial \
      --delete \
      --delete-excluded \
      --exclude-from "$script_path/../$script/exclude" \
      "$source_path" \
      "$target_host:$target_path"
